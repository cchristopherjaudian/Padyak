<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".activity.frmStarted">

    <FrameLayout
        android:id="@+id/frameGetStarted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="160dp"
                android:layout_height="185dp"
                android:scaleType="fitXY"
                android:src="@drawable/applogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnGetStarted"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/rounded_white_button"
                android:text="Get Started"
                android:textColor="@color/ok_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameTerms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:text="Terms and Conditions"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="User Responsibilities"
                    android:textColor="#000"
                    android:textSize="19dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="Users must use the application responsibly and in compliance with all applicable laws and regulations. Users are responsible for the accuracy and truthfulness of the information they provide."
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="GPS Tracking and Location Service"
                    android:textColor="#000"
                    android:textSize="19dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="Users must grant necessary permissions for the application to access their GPS location. The GPS location will use for tracking the ride of the User and to easily track by the admin in case of emergency."
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="SMS Alert"
                    android:textColor="#000"
                    android:textSize="19dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="The user will receive SMS Alert if someone in the club send an emergency alert during the ride."
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="Account Security"
                    android:textColor="#000"
                    android:textSize="19dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="In creating account you must choose strong unique passwords and protect their account credentials. After creating an account you must verify your email and mobile number to secure your account. If you forgot your password, you can change your password in the login section and in profile settings"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center_vertical"
                    android:text="Acceptance of Terms"
                    android:textColor="#000"
                    android:textSize="19dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:gravity="center"
                    android:text="Require users to explicitly accept the terms and conditions before using the application."
                    android:textSize="15dp" />
                <Button
                    android:id="@+id/btnAgree"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_white_button"
                    android:text="I Agree"
                    android:textColor="@color/ok_color" />

            </LinearLayout>


        </ScrollView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>