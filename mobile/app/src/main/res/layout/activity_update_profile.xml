<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_color"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateProfileActivity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/coolvetica"
        android:text="Edit Profile"
        android:textColor="#FFF"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imgAdminProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/coolvetica"
        android:text="SAVE"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_bg"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView11"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:id="@+id/txCreateEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/coolvetica"
            android:text="Email Address"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txAddEventTitle"
            android:tag="Email Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="text"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txCreateEmail" />

        <TextView

            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="First Name"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txAddEventTitle" />

        <EditText
            android:id="@+id/etCreateFirstName"
            android:tag="First Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toStartOf="@+id/etCreateLastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Last Name"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="@+id/etCreateLastName"
            app:layout_constraintTop_toBottomOf="@+id/txAddEventTitle" />

        <EditText
            android:id="@+id/etCreateLastName"
            android:tag="Last Name"
            android:maxLength="20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="text"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etCreateFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textView35" />

        <TextView
            android:id="@+id/txCreateContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Contact Number"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCreateFirstName" />

        <EditText
            android:id="@+id/etCreateContact"
            android:tag="Contact Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txCreateContact" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Birthdate"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCreateContact" />

        <EditText
            android:id="@+id/etCreateBirthdate"
            android:tag="Birthdate"
            android:maxLength="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="text"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="@+id/etCreateHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView41" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Gender"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="@+id/etCreateGender"
            app:layout_constraintTop_toBottomOf="@+id/etCreateContact" />

        <Spinner
            android:id="@+id/etCreateGender"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            app:layout_constraintBottom_toBottomOf="@+id/etCreateBirthdate"
            app:layout_constraintEnd_toEndOf="@+id/etCreateWeight"
            app:layout_constraintStart_toStartOf="@+id/etCreateWeight"
            app:layout_constraintTop_toTopOf="@+id/etCreateBirthdate" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Height"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCreateBirthdate" />

        <EditText
            android:id="@+id/etCreateHeight"
            android:tag="Height"
            android:maxLength="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="text"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toStartOf="@+id/etCreateWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView43" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Weight"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="@+id/etCreateWeight"
            app:layout_constraintTop_toBottomOf="@+id/etCreateBirthdate" />

        <EditText
            android:id="@+id/etCreateWeight"
            android:tag="Weight"
            android:maxLength="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="text"
            android:maxLines="1"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etCreateHeight"
            app:layout_constraintTop_toBottomOf="@+id/textView43" />

        <TextView
            android:id="@+id/txCreatePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/coolvetica"
            android:text="Password"
            android:textColor="#000"
            android:textSize="@dimen/subheader_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCreateHeight" />

        <EditText
            android:id="@+id/etCreatePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/et_rounded"
            android:fontFamily="@font/coolvetica"
            android:inputType="textPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="7dp"
            android:tag="Password"
            app:layout_constraintEnd_toStartOf="@+id/imgShowPassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txCreatePassword" />

        <ImageView
            android:id="@+id/imgShowPassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_outline_remove_red_eye_24"
            app:layout_constraintBottom_toBottomOf="@+id/etCreatePassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etCreatePassword" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>