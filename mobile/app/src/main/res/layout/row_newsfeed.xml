<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"

    android:id="@+id/cardNewsfeedMain"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNewsfeedMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSubProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgParticipant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txRowName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/coolvetica"
            android:gravity="center_vertical"
            android:text="Angelo Carlos"
            android:textColor="@color/app_color"

            app:layout_constraintEnd_toStartOf="@+id/imgComments"
            app:layout_constraintStart_toEndOf="@+id/cardSubProfile"
            app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

        <TextView

            android:id="@+id/txLikesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-black"
            android:text="0"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

        <ImageView
            android:id="@+id/imgLikes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"

            android:src="@drawable/baseline_thumb_up_off_alt_24"
            app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
            app:layout_constraintEnd_toStartOf="@+id/txLikesCount"
            app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

        <TextView

            android:id="@+id/txCommentsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-black"
            android:text="0"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
            app:layout_constraintEnd_toStartOf="@+id/imgLikes"
            app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

        <ImageView
            android:id="@+id/imgComments"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/baseline_add_comment_24"
            app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
            app:layout_constraintEnd_toStartOf="@+id/txCommentsCount"
            app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_flag_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSubProfile" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="Edsa Gaudalupe Bus Stop, Mandaluyong"
            android:textColor="#000"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardSubProfile"
            app:layout_constraintTop_toTopOf="@+id/imageView11" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_location_on_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <TextView
            android:id="@+id/txRideDestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Victory Liner - Cubao"
            android:textColor="#000"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardSubProfile"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_access_time_filled_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txRideDestination" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="10:25:32 - 11:00:01"
            android:textColor="#000"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintStart_toEndOf="@+id/cardSubProfile"
            app:layout_constraintTop_toTopOf="@+id/imageView13" />

        <TextView
            android:id="@+id/txPostTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:text="2023-05-01-00:00:00"
            android:textColor="#000"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/txRowName"
            app:layout_constraintStart_toStartOf="@+id/txRowName"
            app:layout_constraintTop_toBottomOf="@+id/txRowName" />

        <ImageView

            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:src="@drawable/baseline_social_distance_24"
            app:layout_constraintStart_toEndOf="@+id/textView40"
            app:layout_constraintTop_toTopOf="@+id/imageView13" />

        <TextView
            android:id="@+id/txRideDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="35km"
            android:textColor="#000"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            app:layout_constraintTop_toTopOf="@+id/imageView13" />

        <ImageView
            android:id="@+id/imgNewsfeed"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>