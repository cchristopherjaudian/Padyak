<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txRowNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/coolvetica"
        android:text="1"
        android:textColor="@color/app_color"
        app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSubProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgParticipant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txRowName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/coolvetica"
        android:text="Ricardo Madlangtuta"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
        app:layout_constraintEnd_toStartOf="@+id/txRowDistance"
        app:layout_constraintStart_toEndOf="@+id/cardSubProfile"
        app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />

    <TextView
        android:id="@+id/txRowDistance"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-light"
        android:text="14,000km"
        app:layout_constraintBottom_toBottomOf="@+id/cardSubProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardSubProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>